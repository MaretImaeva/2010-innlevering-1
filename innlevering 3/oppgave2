
from oppgave1 import Film, linjer, Graf, Skuespiller, unpackGraf


def DFS(G,s, visited): #med stack, også fra graf notat
    V, E, w = unpackGraf(G)
    resultat = []
    stack = [s]

    while stack:
        u = stack.pop()
        if u not in visited:
            resultat.append(u)
            visited.add(u)
            for v in E[u]:
                stack.append(v)
    return resultat

#Finner størrelsen på komponenetene 
def kompSize(G):
    V, E, w = unpackGraf(G)
    visited = set()
    size = []
    for v in V:
        if v not in visited:
            comp = DFS(G, v, visited)
            size.append(len(comp))
    return size
    
def skrivStørrelser(G):
    size = kompSize(G)
    freq = {}
    for i in size:
        freq[i] = freq.get(i,0)+1
    for i in freq:
        print("There are", freq[i], "components of size", i)

graf = Graf(linjer)
skrivStørrelser(graf)
